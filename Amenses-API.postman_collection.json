{
  "info": {
    "name": "Amenses Collaborative Event & Polling API",
    "_postman_id": "amenses-api-collection",
    "description": "API collection for Amenses backend (auth, events, polls)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/auth/register", "host": ["{{base_url}}"], "path": ["api", "auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api", "auth", "login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/events/create", "host": ["{{base_url}}"], "path": ["api", "events", "create"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample Event\",\n  \"description\": \"Event description\",\n  \"date\": \"2025-09-10T10:00:00Z\",\n  \"createdBy\": \"{{userId}}\"\n}"
            }
          }
        },
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{base_url}}/api/events/", "host": ["{{base_url}}"], "path": ["api", "events", ""] }
          }
        },
        {
          "name": "Join Event",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/events/join", "host": ["{{base_url}}"], "path": ["api", "events", "join"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{eventId}}\",\n  \"userId\": \"{{userId}}\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Polls",
      "item": [
        {
          "name": "Create Poll",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/polls/create", "host": ["{{base_url}}"], "path": ["api", "polls", "create"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{eventId}}\",\n  \"question\": \"Which date works best?\",\n  \"options\": [\n    { \"text\": \"2025-09-10\" },\n    { \"text\": \"2025-09-11\" }\n  ]\n}"
            }
          }
        },
        {
          "name": "Vote",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/polls/vote", "host": ["{{base_url}}"], "path": ["api", "polls", "vote"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pollId\": \"{{pollId}}\",\n  \"optionIndex\": 0,\n  \"userId\": \"{{userId}}\"\n}"
            }
          }
        },
        {
          "name": "Get Polls by Event",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{base_url}}/api/polls/event/{{eventId}}", "host": ["{{base_url}}"], "path": ["api", "polls", "event", "{{eventId}}"] }
          }
        }
      ]
    }
  ]
}
